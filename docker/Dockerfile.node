# Multi-stage build for Node.js services
FROM node:20-alpine AS base

# Install dependencies for ARM64 compatibility
RUN apk add --no-cache python3 make g++

WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Expose port (will be overridden by specific service)
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
